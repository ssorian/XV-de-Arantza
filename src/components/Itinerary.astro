---
import { Image } from 'astro:assets'
import Church from '@/icons/Church.astro'
import Dance from '@/icons/Dance.astro'
import Dinner from '@/icons/Dinner.astro'
import Reception from '@/icons/Reception.astro'

const { src, alt, width, height } = {
  src: 'https://dl1fn8emzdzuebjv.public.blob.vercel-storage.com/Background.png',
  alt: 'Background',
  width: 1920,
  height: 1080,
}

const activities = [
  {
    time: '6:00 PM',
    title: 'Ceremonia Religiosa',
    description: 'Misa en la terraza de la Hacienda el Coecillo',
    icon: Church,
  },
  {
    time: '7:00 PM',
    title: 'Recepci√≥n',
    description: 'Recepcion en el Salon de la Hacienda el Coecillo',
    icon: Reception,
  },
  {
    time: '8:00 PM',
    title: 'Cena',
    description: '...',
    icon: Dinner,
  },
  {
    time: '9:00 PM',
    title: 'Baile',
    description: '...',
    icon: Dance,
  },
]
---

<div class="relative w-screen min-h-screen font-josefin text-white">
  <Image {src} {alt} {width} {height} class="absolute w-full h-full object-cover" />
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
  <div class="relative z-10 flex flex-col items-center gap-24 py-24">
    <h2
      class="text-4xl sm:text-5xl lg:text-6xl font-great-vibes"
      style="text-shadow: 
      1px 1px 0 rgba(0,0,0,0.2),
      2px 2px 0 rgba(0,0,0,0.4),
      3px 3px 0 rgba(0,0,0,0.6),
      4px 4px 0 rgba(0,0,0,0.8),
      5px 5px 0 rgba(0,0,0,1);"
    >
      Itinerario
    </h2>
    <div class="w-full max-w-4xl relative px-4 md:px-0">
      <div
        class="hidden md:block absolute top-0 bottom-0 left-1/2 -translate-x-1/2 w-1 bg-white/50 rounded-full"
      >
      </div>
      <div class="relative flex flex-col gap-20">
        {
          activities.map((activity, index) => (
            <div
              class={`flex items-center w-full md:w-1/2 ${index % 2 === 0 ? 'md:self-start' : 'md:self-end'}`}
            >
              <div
                class={`relative w-full px-4 md:px-0 ${index % 2 === 0 ? 'md:pr-16' : 'md:pl-16'}`}
              >
                <div
                  class={`absolute z-10 top-0 -translate-y-1/2 left-1/2 -translate-x-1/2 md:top-1/2 w-16 h-16 bg-white rounded-full flex justify-center items-center text-black text-4xl animate-glow ${index % 2 === 0 ? 'md:right-0 md:translate-x-1/2' : 'md:left-0 md:-translate-x-1/2'}`}
                >
                  <activity.icon />
                </div>
                <div
                  class={`backdrop-blur-lg bg-white/10 rounded-xl p-6 text-center md:text-left pt-12 md:pt-6 ${index % 2 === 0 ? 'md:text-right' : 'text-left'}`}
                >
                  <p class="text-2xl font-bold">{activity.time}</p>
                  <p class="text-3xl font-great-vibes">{activity.title}</p>
                  <p>{activity.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
